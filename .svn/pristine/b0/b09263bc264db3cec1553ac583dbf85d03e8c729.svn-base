<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/fcr_video_back_im"
            android:onClick="backOnClick"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:gravity="center"
            android:id="@+id/fcr_video_marquee_title"
            android:ellipsize="marquee"
            android:visibility="visible"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:focusable="true"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <android.widget.VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fcr_video_vv"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/b"
            android:id="@+id/fcr_video_im"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分享"
                android:textColor="#000"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/fcr_collect_selector"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="收藏"
                android:layout_weight="3"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/fcr_download_selector"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="下载"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000"
        android:id="@+id/fcr_video_tv"
        android:text="中脉自成立以来。。。"/>
</LinearLayout>
