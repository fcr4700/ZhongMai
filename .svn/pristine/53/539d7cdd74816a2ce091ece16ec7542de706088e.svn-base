<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qf.project.tempproject.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/fragmentId"></RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Tabs"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/radioBtn_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="我的"/>
        <RadioButton
            android:id="@+id/radioBtn_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="播放记录"/>
        <RadioButton
            android:id="@+id/radioBtn_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="扫图片"/>
        <RadioButton
            android:id="@+id/radioBtn_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="我的收藏"/>
        <RadioButton
            android:id="@+id/radioBtn_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="炫酷地带"/>

    </RadioGroup>
</RelativeLayout>
